= form_for(@article, html: {multipart: true}) do |f|
  %ul
    - @article.errors.full_messages.each do |error|
      %li= error
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :body
    %br/
    = f.text_area :body
  %p
    = f.label :image, "Attach an Image"
    - if @article.image.exists?
      = image_tag @article.image.url, style: 'max-width:60px'
    %br= f.file_field :image
  %p
    = f.label :tag_list
    = f.text_field :tag_list
  %p
    = f.submit
