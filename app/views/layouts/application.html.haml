!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Blog
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-12
          .layout-bar
            - if logged_in?
              = "Logged in as #{current_user.email}"
              = link_to "(logout)", logout_path, class: 'layout-bar__log-link'
            - else
              = "Logged out"
              = link_to "login" , login_path, class: 'layout-bar__log-link'
          .flash-bar= flash.notice
        = yield
