.container
  .row
    .col-md-12
      .tag
        %p
          = link_to 'Back to tag list', tags_path
        %h2.tag__title
          Articless tagged with #{@tag.name}
        .tag__articles
          %ul.tag__articles__list
            - @tag.articles.each do |article|
              %li.tag__articles__list__element= link_to article.title, article_path(article)
